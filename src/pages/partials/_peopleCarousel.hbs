<section id="metzlerSection" class="projectSection carouselSection hideSection">
    <span class="close glyphicon glyphicon-remove personClose"></span>
    <div id="projectSlide" class="carousel slide " data-ride="carousel" data-interval="false">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#projectSlide" data-slide-to="0" class="active"></li>
            <li data-target="#projectSlide" data-slide-to="1"></li>
            <li data-target="#projectSlide" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            {{#each persons.people.[0].slides}} {{#is @index 0 }}
            <div class="active item fullbg" style="background: url({{pic}}) no-repeat center center fixed;)  ">
                {{/is}} {{#isnt @index 0 }}
                <div class="item fullbg" style="background: url({{pic}}) no-repeat center center fixed;)  ">

                    {{/isnt}}

                    <div class="infobox infoclear">
                        <div class="inner">
                            <div class="slideInfo">

                                <div class="slideContent">
                                    <h3><b>JoAnne Metzler </b>{{title}}</h3> {{#isnt @index 0 }} {{{iframe}}} {{/isnt}}

                                    <p>{{hook}}</p>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!--<div class="layer"></div> -->

                </div>
                {{/each}}

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#projectSlide" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#projectSlide" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>



</section>